---
// src/components/CodeExplainer.astro
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
}
const { title } = Astro.props;
---
<div class="explainer-box">
  <div class="header">
    <Icon name="heroicons:code-bracket" class="header-icon" />
    <span class="title">{title}</span>
  </div>
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .explainer-box {
    background-color: var(--card-bg-color);
    border: 1px solid var(--card-border-color);
    border-radius: 12px;
    margin: 2.5rem 0;
    overflow: hidden;
    box-shadow: 0 4px 12px var(--shadow-color);
  }

  .header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background-color: color-mix(in srgb, var(--card-bg-color) 80%, var(--card-border-color));
    border-bottom: 1px solid var(--card-border-color);
  }
  
  .header-icon {
    font-size: 1.25rem;
    color: var(--font-color-light);
  }

  .title {
    font-weight: 500;
    color: var(--font-color);
    font-family: var(--font-mono);
  }

  .content {
    padding: 1rem 1.25rem;
  }
  .content :global(details) {
    border-bottom: 1px solid var(--card-border-color);
    padding: 1rem 0;
  }
  .content :global(details:first-child) { padding-top: 0; }
  .content :global(details:last-child) { border-bottom: none; padding-bottom: 0; }
  
  .content :global(summary) {
    cursor: pointer;
    font-weight: 600;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--font-color);
    transition: color 0.2s ease;
  }
  .content :global(summary:hover) {
    color: var(--brand-color);
  }

  .content :global(summary::-webkit-details-marker) { display: none; }
  
  .content :global(summary::before) {
    content: 'â–¶';
    font-size: 0.6em;
    color: var(--brand-color);
    transition: transform 0.2s ease-in-out;
    margin-right: 0.25rem;
  }
  .content :global(details[open] > summary::before) {
    transform: rotate(90deg);
  }
  
  .content :global(details p) {
    margin-top: 0.75rem;
    margin-bottom: 0;
    padding-left: 1.5rem;
    color: var(--font-color-light);
    line-height: 1.7;
    border-left: 2px solid var(--card-border-color);
  }
</style>