---
// src/components/Navbar.astro
---
<header class="navbar" id="navbar">
  <div class="navbar-container container">
    <a href="/" class="logo" aria-label="RxDev Man Homepage">
      <svg width="48" height="48" viewBox="0 0 128 128" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M24 24h40c26 0 40 16 40 40s-14 40-40 40H24V24Z" stroke="currentColor" stroke-width="6" fill="none"/>
        <path d="M64 44v40l16-20-16-20Z" fill="currentColor"/>
      </svg>
      <span class="logo-text">RxDev Man</span>
    </a>

    <nav class="nav-links" id="nav-links">
      <a href="/" data-nav-link>Home</a>
      <a href="/blog" data-nav-link>Blog</a>
      <a href="/tools" data-nav-link>Tools</a>
      <a href="/hosxp" data-nav-link>HOSxP</a> 
      <a href="/about" data-nav-link>About</a>
    </nav>

    <button class="hamburger" id="hamburger" aria-label="Toggle navigation" aria-expanded="false">
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>
</header>

<script>
  const hamburger = document.getElementById('hamburger');
  const navLinks = document.getElementById('nav-links');
  const navbar = document.getElementById('navbar');

  if (hamburger && navLinks) {
    hamburger.addEventListener('click', () => {
      const isExpanded = navLinks.classList.toggle('active');
      hamburger.classList.toggle('active');
      hamburger.setAttribute('aria-expanded', isExpanded.toString());
      document.body.classList.toggle('no-scroll');
    });
  }

  window.addEventListener('scroll', () => {
    if (!navbar) return;
    if (window.scrollY > 20) { 
      navbar.classList.add('scrolled');
    } else {
      navbar.classList.remove('scrolled');
    }
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 1.5rem 0;
    background-color: transparent;
    transition: background-color 0.3s ease, box-shadow 0.3s ease, padding 0.3s ease; 
  }

  .navbar.scrolled {
    background-color: color-mix(in srgb, var(--bg-color) 85%, transparent);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    box-shadow: 0 2px 10px var(--shadow-color);
    padding: 1rem 0;
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--brand-color);
  }
  .logo-svg {
    height: 40px;
    width: 40px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .logo:hover .logo-svg {
    transform: rotate(-15deg) scale(1.1);
  }
  .logo-text {
    font-family: var(--font-sans); 
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--font-color);
    transition: color 0.2s ease;
  }
  .logo:hover .logo-text {
    color: var(--brand-color);
  } 

  .nav-links {
    display: flex;
    gap: 2.5rem;
     font-size: 1.2rem;
  }
  .nav-links a {
    color: var(--font-color);
    text-decoration: none;
    font-weight: 500;
    position: relative;
    padding-bottom: 4px;
    transition: color 0.2s ease;
  }
  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: var(--brand-color);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .nav-links a:hover {
    color: var(--brand-color);
  }
  .nav-links a:hover::after {
    width: 100%;
  }

  .hamburger {
    display: none;
    width: 36px;
    height: 36px;
    border: 1px solid var(--card-border-color);
    border-radius: 50%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 4px; 

    background: transparent;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
    transition: background-color 0.2s ease, border-color 0.2s ease;
  }
  .hamburger:hover {
    background-color: var(--card-bg-color);
    border-color: var(--font-color-light);
  }

  .bar {
    width: 16px; 
    height: 2px;
    background-color: var(--font-color);
    border-radius: 10px;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: var(--card-bg-color);
      transform: translateX(100%);
      transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: 1000;
    }
    .nav-links.active {
      display: flex;
      transform: translateX(0);
    }
    .nav-links a {
      font-size: 1.2rem;
    }
    .hamburger {
      display: flex;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: translateY(3px) rotate(45deg);
    }
    .hamburger.active .bar:nth-child(2) {
      transform: translateY(-3px) rotate(-45deg);
    }
  }

  body.no-scroll {
    overflow: hidden;
  }
</style>