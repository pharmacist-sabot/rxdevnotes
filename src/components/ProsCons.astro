---
// src/components/ProsCons.astro
import { Icon } from 'astro-icon/components';
---
<div class="pros-cons-grid">
  <div class="card pros">
    <div class="header">
      <Icon name="heroicons:check-circle-solid" class="icon" />
      <h4>ข้อดี</h4>
    </div>
    <div class="content">
      <slot name="pros" />
    </div>
  </div>
  <div class="card cons">
    <div class="header">
      <Icon name="heroicons:x-circle-solid" class="icon" />
      <h4>ข้อจำกัด</h4>
    </div>
    <div class="content">
      <slot name="cons" />
    </div>
  </div>
</div>

<style>
  .pros-cons-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .card {
    background-color: var(--card-bg-color);
    border: 1px solid var(--card-border-color);
    border-radius: 8px;
  }
  
  .header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--card-border-color);
  }

  .header h4 {
    margin: 0;
    font-size: 1rem;
    color: var(--font-color);
  }

  .icon {
    font-size: 1.25rem;
  }
  .pros .icon { color: #22c55e; } 
  .cons .icon { color: #ef4444; } 
  
  .content {
    padding: 0.25rem 1rem 1rem 1rem;
  }

  .content :global(ul) {
    padding-left: 1.25rem;
    margin: 0;
    line-height: 1.7;
    opacity: 0.9;
  }
  
  @media (max-width: 700px) {
    .pros-cons-grid {
      grid-template-columns: 1fr;
    }
  }
</style>