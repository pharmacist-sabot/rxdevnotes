---
// src/components/ProsCons.astro
import { Icon } from 'astro-icon/components';
---
<div class="pros-cons-grid">
  <div class="card pros-card">
    <div class="header">
      <Icon name="heroicons:check-circle-solid" class="icon pros-icon" />
      <h4>ข้อดี</h4>
    </div>
    <div class="content">
      <slot name="pros" />
    </div>
  </div>
  <div class="card cons-card">
    <div class="header">
      <Icon name="heroicons:x-circle-solid" class="icon cons-icon" />
      <h4>ข้อจำกัด</h4>
    </div>
    <div class="content">
      <slot name="cons" />
    </div>
  </div>
</div>

<style>
  .pros-cons-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 2rem 0;
  }
  .card {
    padding: 0;
  }
  .pros-card { background-color: rgba(34, 197, 94, 0.05); }
  .cons-card { background-color: rgba(239, 68, 68, 0.05); }
  html.dark .pros-card { background-color: rgba(74, 222, 128, 0.05); }
  html.dark .cons-card { background-color: rgba(248, 113, 113, 0.05); }

  .header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--card-border-color);
  }
  .header h4 {
    margin: 0;
    font-size: 1.1rem;
    font-family: var(--font-sans);
    color: var(--font-color);
    font-weight: 600;
  }
  .icon { font-size: 1.5rem; }
  .pros-icon { color: var(--success-color); } 
  .cons-icon { color: var(--danger-color); } 
  
  .content {
    padding: 1rem 1.25rem;
  }
  .content :global(ul) {
    padding-left: 1.25rem;
    margin: 0;
    line-height: 1.7;
    color: var(--font-color-light);
  }
  
  @media (max-width: 700px) {
    .pros-cons-grid {
      grid-template-columns: 1fr;
    }
  }
</style>