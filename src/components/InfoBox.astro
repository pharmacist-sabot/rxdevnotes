---
// src/components/InfoBox.astro
interface Props {
  title: string;
  type?: 'info' | 'success' | 'warning' | 'danger';
}
const { title, type = 'info' } = Astro.props;

const icons = {
  info: 'üí°',
  success: '‚úÖ',
  warning: '‚ö†Ô∏è',
  danger: 'üî•'
};
---
<div class={`info-box ${type}`}>
  <div class="title-bar">
    <span class="icon">{icons[type]}</span>
    {title}
  </div>
  <div class="content">
    <slot /> 
  </div>
</div>

<style>
  .info-box {
    border-radius: 8px;
    margin: 2rem 0;
    background-color: var(--card-bg-color);
    overflow: hidden;
    border-left: 4px solid;
  }
  .title-bar {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    font-weight: 600;
    font-family: var(--font-sans);
  }
  .content {
    padding: 0.25rem 1.25rem 1.25rem;
    color: var(--font-color-light);
  }
  .content :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Type Variants */
  .info-box.info { border-color: var(--brand-color); }
  .info-box.info .title-bar { color: var(--brand-color); }
  .info-box.success { border-color: var(--success-color); }
  .info-box.success .title-bar { color: var(--success-color); }
  .info-box.warning { border-color: var(--warning-color); }
  .info-box.warning .title-bar { color: var(--warning-color); }
  .info-box.danger { border-color: var(--danger-color); }
  .info-box.danger .title-bar { color: var(--danger-color); }
</style>