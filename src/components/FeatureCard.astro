---
// src/components/FeatureCard.astro
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---
<div class="feature-card">
  <div class="card-header">
    <div class="icon-wrapper">
      <Icon name={`heroicons:${icon}`} class="card-icon" />
    </div>
    <h3>{title}</h3>
  </div>
  <div class="card-content">
    <slot />
  </div>
</div>

<style>
  .feature-card {
    background-color: transparent;
    padding: 1rem;
    color: var(--font-color); 
    border-radius: 12px;
    transition: background-color 0.2s ease-in-out;
  }

  .feature-card:hover {
    background-color: var(--card-bg-color);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  
  .icon-wrapper {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: color-mix(in srgb, var(--brand-color) 10%, transparent);
    border-radius: 50%;
  }

  .card-icon {
    color: var(--brand-color);
    width: 24px;
    height: 24px;
  }

  h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    font-family: var(--font-sans); 
    color: var(--font-color);
  }

  .card-content {
    line-height: 1.6;
    color: var(--font-color-light);
  }

  .card-content :global(a) {
    color: var(--brand-color);
    text-decoration: underline;
  }
</style>