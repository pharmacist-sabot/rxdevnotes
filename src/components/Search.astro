---
// src/components/Search.astro
import { Icon } from 'astro-icon/components';
---

<div class="search-component-wrapper">
  <Icon name="heroicons:magnifying-glass" class="search-icon" />
  <div id="search-container"></div>
</div>

<script is:inline>
  function initPagefind() {
    if (window.PagefindUI) {
      try {
        // eslint-disable-next-line no-new
        new window.PagefindUI({
          element: '#search-container',
          showSubResults: true,
        });
      }
      catch (error) {
        console.error('Failed to initialize Pagefind UI:', error);
      }
    }
    else {
      setTimeout(initPagefind, 50);
    }
  }

  document.addEventListener('astro:page-load', initPagefind);
</script>

<style>
  .search-component-wrapper {
    position: relative;
    width: 240px;
  }

  .search-icon {
    position: absolute;
    top: 50%;
    left: 0.8rem;
    transform: translateY(-50%);
    color: var(--font-color-light);
    width: 20px;
    height: 20px;
    pointer-events: none;
  }

  :global(.pagefind-ui__search-input) {
    width: 100%;
    padding: 0.6rem 1rem 0.6rem 2.5rem;
    font-size: 0.95rem;
    border-radius: 99px;
    border: 1px solid var(--card-border-color);
    background-color: var(--card-bg-color);
    color: var(--font-color);
    transition: border-color 0.2s, box-shadow 0.2s;
    -webkit-appearance: none;
  }

  :global(.pagefind-ui__search-input::placeholder) {
    color: var(--font-color-light);
    opacity: 1;
  }

  :global(.pagefind-ui__search-input:focus) {
    outline: none;
    border-color: var(--brand-color);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--brand-color) 20%, transparent);
  }
</style>
