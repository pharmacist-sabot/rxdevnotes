---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Welcome">
  <div class="home-container">
    <div class="intro-grid">
      <div class="intro-text-content">
        <p class="greeting">HI, I'M SURADET</p>
        <h1 class="headline">
          Pharmacist by Training,<br />Developer by Passion.
        </h1>
        <p class="description">
          ยินดีต้อนรับสู่ RxDev Man ของผม นี่คือที่ที่ผมจะบันทึกเรื่องราวการเปลี่ยนผ่านจากสายงาน เภสัชกรรม (pharmacy) เข้าสู่โลกของ การพัฒนาซอฟต์แวร์ (software development) 
        </p>
        <a href="/blog" class="cta-button">Explore My Notes</a>
      </div>
      <div class="profile-image-container">
        <img 
          src="/profile-placeholder.jpg" 
          alt="A portrait of the author" 
          class="profile-image" 
        />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 280px); 
    padding: 2rem 0;
  }

  .intro-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    align-items: center;
    gap: 4rem;
    max-width: 1100px;
  }

  .greeting {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 500;
    color: var(--font-color-light);
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
  }

  .headline {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .description {
    font-size: 1.15rem;
    max-width: 600px;
    margin-bottom: 2.5rem;
  }

  .profile-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .profile-image {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid var(--card-bg-color);
    box-shadow: 0 10px 30px var(--shadow-hover-color);
  }

  @media (max-width: 900px) {
    .intro-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }
    .intro-text-content {
      order: 2; 
    }
    .profile-image-container {
      order: 1; 
    }
    .description {
      margin-left: auto;
      margin-right: auto;
    }
    .profile-image {
      width: 220px;
      height: 220px;
    }
  }
</style>