---
// src/layouts/BlogPostLayout.astro
import BaseLayout from './BaseLayout.astro';
import Toc from '../components/Toc.astro';
import type { CollectionEntry } from 'astro:content';
import type { MarkdownHeading } from 'astro';
import { slugify } from '../utils/slugify';

interface Props {
  frontmatter: CollectionEntry<'blog'>['data'];
  headings: MarkdownHeading[];
}

const { frontmatter, headings } = Astro.props;
const { title, description, pubDate, heroImage, category, tags } = frontmatter;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---
<BaseLayout title={title} description={description}>
  <div class="layout-grid">
    <aside class="left-sidebar">
    </aside>

    <article class="prose">
      <header class="post-header">
         <a href={`/blog/categories/${slugify(category)}`} class="category-link">{category}</a>
        <h1>{title}</h1>
        <p class="description">{description}</p>
        <div class="meta">
          <span>Published on {formattedDate}</span>
        </div>
      </header>
      
      {heroImage && <img src={heroImage} alt={`Hero image for ${title}`} class="hero-image"/>}

      <div class="post-content">
        <slot />
      </div>

      <footer class="post-footer">
        <div class="tags-list">
          {tags.map(tag => (
            <a href={`/blog/tags/${slugify(tag)}`} class="tag-chip">{tag}</a>
          ))}
        </div>
      </footer>
    </article>

    <aside class="right-sidebar">
      <Toc headings={headings} />
    </aside>
  </div>
</BaseLayout>

<style>
  .layout-grid {
    display: grid;
    grid-template-columns: minmax(1.5rem, 1fr) minmax(0, 800px) minmax(1.5rem, 1fr);
    gap: 2rem;
  }
  .prose {
    grid-column: 2;
  }
  .right-sidebar {
    grid-column: 3;
    position: sticky;
    top: 100px; 
    align-self: start;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
  }
  
  .post-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .category-link {
    font-family: var(--font-mono);
    text-transform: uppercase;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--font-color-light);
    letter-spacing: 0.05em;
  }
  .category-link:hover {
    color: var(--brand-color);
  }
  h1 {
    margin: 0.5rem 0 1rem;
  }
  .description {
    font-size: 1.25rem;
    color: var(--font-color);
    max-width: 680px;
    margin: 0 auto 1.5rem;
  }
  .meta {
    font-size: 0.9rem;
    color: var(--font-color-light);
    font-family: var(--font-sans);
  }
  .hero-image {
    width: 100%;
    margin-bottom: 3rem;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    border: 1px solid var(--card-border-color);
  }
  .post-footer {
    margin-top: 4rem;
    border-top: 1px solid var(--card-border-color);
    padding-top: 2rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }
  .tag-chip {
    background: var(--card-bg-color);
    border: 1px solid var(--card-border-color);
    padding: 0.4rem 1rem;
    border-radius: 99px;
    color: var(--font-color-light);
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }
  .tag-chip:hover {
    background: var(--font-color);
    border-color: var(--font-color);
    color: var(--card-bg-color);
  }

  @media (max-width: 1024px) {
    .layout-grid {
      grid-template-columns: 1fr;
    }
    .left-sidebar, .right-sidebar {
      display: none;
    }
    .prose {
      grid-column: 1;
    }
  }
</style>