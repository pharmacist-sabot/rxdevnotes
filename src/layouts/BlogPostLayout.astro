---
import type { MarkdownHeading } from 'astro';
import type { CollectionEntry } from 'astro:content';

import { getImage, Image } from 'astro:assets';

import RelatedPosts from '@/components/blog/RelatedPosts.astro';
import ShareButtons from '@/components/blog/ShareButtons.astro';
import Toc from '@/components/blog/Toc.astro';
import ViewCounter from '@/components/blog/ViewCounter.astro';
import { getAllBlogPosts } from '@/lib/blog';
import { getRelatedPosts } from '@/utils/post-utils';
import { slugify } from '@/utils/slugify';

import BaseLayout from './BaseLayout.astro';

type Props = {
  frontmatter: CollectionEntry<'blog'>['data'];
  headings: MarkdownHeading[];
  slug?: string;
};

const { frontmatter, headings, slug } = Astro.props;
const { title, description, pubDate, heroImage, category, tags } = frontmatter;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Use the provided slug or generate from title as a database key
const postSlug = slug || slugify(title);

// Fetch all blog posts (cached) and compute related posts
const allPosts = await getAllBlogPosts();
const relatedPosts = getRelatedPosts(allPosts, postSlug, tags, category, 3);

// Pre-generate the hero image URL for <link rel="preload"> to improve LCP
const preloadHero = heroImage
  ? await getImage({ src: heroImage, width: 1200, quality: 85, format: 'webp' })
  : null;
---

<BaseLayout title={title} description={description}>
  {preloadHero && (
    <link
      slot="head"
      rel="preload"
      as="image"
      href={preloadHero.src}
      fetchpriority="high"
    />
  )}
  <div class="layout-grid">
    <aside class="left-sidebar"></aside>
    <article class="prose">
      <header class="post-header">
        <a
          href={`/blog/categories/${slugify(category)}`}
          class="category-link"
        >{category}</a
        >
        <h1>{title}</h1>
        <p class="description">{description}</p>
        <div class="meta">
          <span>Published on {formattedDate}</span>
          <span class="separator">•</span>
          <!-- เรียกใช้ ViewCounter ตรงนี้ -->
          <ViewCounter slug={postSlug} />
        </div>
      </header>

      {
        heroImage && (
          <Image
            src={heroImage}
            alt={`Hero image for ${title}`}
            class="hero-image"
            loading="eager"
            fetchpriority="high"
            decoding="async"
            quality={85}
            widths={[768, 1024, 1200, 1536]}
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 100vw, 800px"
          />
        )
      }

      <div class="post-content">
        <slot />
      </div>

      <footer class="post-footer">
        <ShareButtons title={title} url={Astro.url} />

        <div class="tags-list">
          {
            tags.map(tag => (
              <a href={`/blog/tags/${slugify(tag)}`} class="tag-chip">
                {tag}
              </a>
            ))
          }
        </div>
      </footer>

      <RelatedPosts relatedPosts={relatedPosts} />
    </article>

    <aside class="right-sidebar">
      <Toc headings={headings} />
    </aside>
  </div>
</BaseLayout>

<style>
  .layout-grid {
    display: grid;
    grid-template-columns: minmax(1.5rem, 1fr) minmax(0, 800px) minmax(
        1.5rem,
        240px
      );
    gap: clamp(1.5rem, 4vw, 3rem);
  }
  .prose {
    grid-column: 2;
  }
  .right-sidebar {
    grid-column: 3;
    position: sticky;
    top: 100px;
    align-self: start;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
  }

  .post-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .category-link {
    font-family: var(--font-mono);
    text-transform: uppercase;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--font-color-light);
    letter-spacing: 0.05em;
  }
  .category-link:hover {
    color: var(--brand-color);
  }
  h1 {
    margin: 0.5rem 0 1rem;
    font-size: clamp(1.5rem, 5vw, 2rem);
  }
  .description {
    font-size: clamp(1.1rem, 3vw, 1.25rem);
    color: var(--font-color);
    max-width: 680px;
    margin: 0 auto 1.5rem;
  }
  .meta {
    font-size: 0.9rem;
    color: var(--font-color-light);
    font-family: var(--font-sans);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  .separator {
    color: var(--card-border-color);
  }
  .hero-image {
    width: 100%;
    max-height: 600px;
    object-fit: cover;
    object-position: center;
    border: 1px solid var(--card-border-color);
    margin-bottom: 3rem;
    background-color: var(--card-bg-color);
  }
  .post-footer {
    margin-top: 4rem;
    border-top: 1px solid var(--card-border-color);
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }
  .tag-chip {
    background: var(--card-bg-color);
    border: 1px solid var(--card-border-color);
    padding: 0.4rem 1rem;
    border-radius: 99px;
    color: var(--font-color-light);
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }
  .tag-chip:hover {
    background: var(--font-color);
    border-color: var(--font-color);
    color: var(--card-bg-color);
  }

  @media (max-width: 1024px) {
    .layout-grid {
      grid-template-columns: minmax(0, 1fr);
      gap: 1.5rem;
    }
    .left-sidebar,
    .right-sidebar {
      display: none;
    }
    .prose {
      grid-column: 1;
    }
  }

  @media (max-width: 768px) {
    .post-header {
      margin-bottom: 2rem;
    }
    .hero-image {
      border-radius: 0;
      margin-left: -1rem;
      margin-right: -1rem;
      width: calc(100% + 2rem);
      max-width: calc(100% + 2rem);
    }
  }
</style>
