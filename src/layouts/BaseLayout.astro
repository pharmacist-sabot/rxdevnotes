---
// src/layouts/BaseLayout.astro
import ThemeScript from '../components/ThemeScript.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';
interface Props {
  title: string;
  description?: string;
}
const { title, description = 'A personal blog about programming and technology.' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
    <ThemeScript />
  </head>
  <body>
    <div class="background-pattern"></div>
    <Navbar />
    <main class="main-content">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-logo">
            <h3>RxDev Man</h3>
            <p>Your ultimate, ever-growing knowledge base for modern software development.</p>
          </div>
          <div class="footer-links">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/blog">Blog</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="https://github.com/pharmacist-sabot/" target="_blank">GitHub</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} RxDev Notes. Crafted with ❤️ for the developer community.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .background-pattern {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 20% 30%, var(--brand-color) 0%, transparent 30%),
                radial-gradient(circle at 80% 70%, var(--accent-color) 0%, transparent 30%);
    opacity: 0.05;
    z-index: -1;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }
  html.dark .background-pattern {
    opacity: 0.1;
  }
  .main-content {
    min-height: calc(100vh - 200px); /* Adjust based on navbar and footer height */
    padding: 4rem 0 2rem;
  }
  .site-footer {
    background: var(--card-bg-color);
    border-top: 1px solid var(--card-border-color);
    padding: 4rem 0 2rem;
    color: var(--font-color-light);
    font-size: 0.95rem;
  }
  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  .footer-logo h3 {
    color: var(--brand-color);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }
  .footer-logo p {
    color: var(--font-color-light);
    line-height: 1.7;
    max-width: 500px;
  }
  .footer-links h4 {
    color: var(--font-color);
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
  }
  .footer-links ul {
    list-style: none;
    padding: 0;
  }
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  .footer-links a {
    color: var(--font-color-light);
    transition: color 0.3s ease;
  }
  .footer-links a:hover {
    color: var(--accent-color);
  }
  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--card-border-color);
  }
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .main-content {
      padding: 3rem 0 2rem;
    }
    .site-footer {
      padding: 3rem 0 2rem;
    }
  }
</style>