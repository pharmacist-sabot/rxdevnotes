---
import Navbar from '../components/Navbar.astro';
// src/layouts/BaseLayout.astro
import ProgressBar from '../components/ProgressBar.astro';
import '../styles/global.css';

type Props = {
  title: string;
  description?: string;
};
const { title, description = 'A developer\'s living knowledge base, curated by a pharmacist turned programmer.' } = Astro.props;
const currentYear = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{`${title} | RxDev Man`}</title>
  </head>
  <body>
    <ProgressBar />
    <Navbar />
    <main class="main-content">
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="container footer-container">
        <div class="footer-about">
          <h3 class="footer-title">RxDev Man</h3>
          <p>เริ่มต้นจากเภสัชกรรม สู่ความหลงใหลในการพัฒนา บันทึกการเดินทางจากวงการสุขภาพสู่โลกเทคโนโลยี</p>
        </div>
        <div class="footer-links">
          <h4 class="footer-subtitle">Connect</h4>
          <ul>
            <li><a href="https://github.com/pharmacist-sabot/" target="_blank" rel="noopener noreferrer">GitHub</a></li>
            <li><a href="mailto:pharmacistsabot@gmail.com">Email</a></li>
          </ul>
        </div>
        <div class="footer-bottom">
          <p>&copy; {currentYear} RxDev Man. All rights reserved.</p>
        </div>
      </div>
    </footer>
    <style>
      .main-content {
        min-height: calc(100vh - 250px);
        padding: 6rem 0 4rem;
      }
      .site-footer {
        background: var(--card-bg-color);
        border-top: 1px solid var(--card-border-color);
        padding: 4rem 0 2rem;
      }
      .footer-container {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        gap: 2rem;
      }
      .footer-title {
        font-family: var(--font-serif);
        color: var(--font-color);
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }
      .footer-about p {
        color: var(--font-color-light);
        max-width: 400px;
        font-size: 1rem;
      }
      .footer-subtitle {
        font-family: var(--font-sans);
        font-weight: 600;
        color: var(--font-color);
        margin-bottom: 1rem;
        font-size: 1rem;
      }
      .footer-links ul {
        list-style: none;
        padding: 0;
      }
      .footer-links li {
        margin-bottom: 0.75rem;
      }
      .footer-links a {
        color: var(--font-color-light);
        text-decoration: none;
        transition: color 0.2s ease;
      }
      .footer-links a:hover {
        color: var(--brand-color);
      }
      .footer-bottom {
        grid-column: 1 / -1;
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--card-border-color);
        font-size: 0.9rem;
        color: var(--font-color-light);
      }

      @media (max-width: 768px) {
        .footer-container {
          grid-template-columns: 1fr;
          text-align: center;
        }
        .footer-about p {
          margin-left: auto;
          margin-right: auto;
        }
      }
    </style>
  </body>
</html>
